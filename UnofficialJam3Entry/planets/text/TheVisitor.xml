<DialogueTree xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/Outer-Wilds-New-Horizons/new-horizons/main/NewHorizons/Schemas/dialogue_schema.xsd">
  <NameField>The Visitor</NameField>

  <DialogueNode>
    <Name>START</Name>
    <EntryCondition>DEFAULT</EntryCondition>
    <Dialogue>
      <Page>Hello.</Page>
    </Dialogue>
    <RevealFacts>
      <FactID>GRANITE_VISITOR_FACT</FactID>
    </RevealFacts>
    <DialogueTarget>Menu</DialogueTarget>
  </DialogueNode>

  <DialogueNode>
    <Name>Menu</Name>
    <Dialogue>
      <Page>Yes?</Page>
    </Dialogue>

    <DialogueOptionsList>
      <DialogueOption>
        <Text>Did you crash your ship or?</Text>
        <DialogueTarget>Crash</DialogueTarget>
      </DialogueOption>
      <DialogueOption>
        <Text>Where are you from?</Text>
        <DialogueTarget>From</DialogueTarget>
      </DialogueOption>
      <DialogueOption>
        <Text>Goodbye.</Text>
      </DialogueOption>
    </DialogueOptionsList>
  </DialogueNode>

  <DialogueNode>
    <Name>Crash</Name>
    <Dialogue>
      <Page>No.</Page>
    </Dialogue>
    <DialogueTarget>Menu</DialogueTarget>
  </DialogueNode>

  <DialogueNode>
    <Name>From</Name>
    <Dialogue>
      <Page>That's a personal question.</Page>
    </Dialogue>
    <DialogueTarget>Menu</DialogueTarget>
  </DialogueNode>

</DialogueTree>