<DialogueTree xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/Outer-Wilds-New-Horizons/new-horizons/main/NewHorizons/Schemas/dialogue_schema.xsd">
  <NameField>Quartz</NameField>

  <DialogueNode>
    <Name>START</Name>
    <EntryCondition>DEFAULT</EntryCondition>
    <Dialogue>
      <Page>Oh hey, how's it going?</Page>
    </Dialogue>
    <RevealFacts>
      <FactID>GRANITE_HEARTHIAN_FACT</FactID>
    </RevealFacts>
    <DialogueTarget>QuartzMenu</DialogueTarget>
  </DialogueNode>

  <DialogueNode>
    <Name>QuartzMenu</Name>
    <Dialogue>
      <Page>You wanted to ask me something?</Page>
    </Dialogue>

    <DialogueOptionsList>
      <DialogueOption>
        <Text>Did you crash your ship or?</Text>
        <DialogueTarget>Crash</DialogueTarget>
      </DialogueOption>
      <DialogueOption>
        <Text>Goodbye.</Text>
      </DialogueOption>
    </DialogueOptionsList>
  </DialogueNode>

  <DialogueNode>
    <Name>Crash</Name>
    <Dialogue>
      <Page>Yeah, I was on my way to Granite's birthday party and wasn't paying attention to my flying!</Page>
      <Page>Crashed into a big volcanic crater.</Page>
      <Page>Bit of a bummer!</Page>
    </Dialogue>
    <DialogueTarget>QuartzMenu</DialogueTarget>
  </DialogueNode>

</DialogueTree>